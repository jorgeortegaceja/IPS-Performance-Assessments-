        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var objetives = new GlideRecord('x_ipsu2_ips_perfor_goal');
	objetives.addQuery('evaluation', current.evaluation.sys_id);
	objetives.addQuery('sys_id', '!=', current.sys_id);

	objetives.query();
	var count =  parseFloat(current.leader_evaluation) || 0;
	while(objetives.next()){
		count += parseFloat(objetives.leader_evaluation) || 0;
	}
	
	
	var evaluation = new GlideRecord('x_ipsu2_ips_perfor_performance_evaluation');
	evaluation.get(current.evaluation.sys_id);

	evaluation.leader_averange_evaluation = count;
	evaluation.update();
	

})(current, previous);]]></script>
