        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {


	
	var iniciativas = new GlideRecord('x_ipsu2_ips_perfor_initiatives');
	iniciativas.addQuery('goal', current.goal.sys_id);
	iniciativas.addQuery('sys_id', '!=', current.sys_id)
	iniciativas.query();
	var count = ((parseFloat(current.ye_leader_evaluation) || 0) /100) * parseFloat(current.collaborator_initiative_weight);
	

	while(iniciativas.next()){
		
		var porcentaje = (parseFloat(iniciativas.ye_leader_evaluation) || 0) /100;

		var aportacion = porcentaje * parseFloat(iniciativas.collaborator_initiative_weight);
		count += aportacion;
	}

	

	var objetivo = new GlideRecord('x_ipsu2_ips_perfor_goal');
	objetivo.get(current.goal.sys_id);
	objetivo.leader_evaluation = count;
	objetivo.update();


})(current, previous);]]></script>
