        <template><![CDATA[<style>
    .invalid-feedback {
        color: #ff0000;
    }
</style>
<div>
    <h3 class="text-center">
        {{ c.createOrEditObejetive }}
    </h3>
    <div style="margin: 2rem;">




        <form>
            <div class="form-group">

                <label for="objetivo">${Captura tu objetivo}</label>
                <input ng-model="c.objetiveForm.fields.objetivo" ng-model-options="{ debounce: 300 }"
                    class="form-control" id="objetivo" placeholder="${Captura tu objetivo}">
                <small class="invalid-feedback">
                    {{ c.objetiveForm.errors.objetivo }}
                </small>
            </div>
            <div class="form-group ">
                <label for="peso">${Captura el peso en porcentaje del objetivo:} </label>
                <input ng-model="c.objetiveForm.fields.peso" ng-model-options="{ debounce: 500 }"
                    class="form-control is-invalid" id="peso" placeholder="${Ejemplo: 25}">
                <small class="invalid-feedback" ng-if="c.objetiveForm.errors.peso">
                    {{ c.objetiveForm.errors.peso }}
                    <br>
                </small>
                <small class="feedback" ng-class="{'invalid-feedback': c.progressBar.resta < 0}">
                    {{
                    c.progressBar.resta > 0 ?
                    'Aún te falta capturar un ' +
                    c.progressBar.resta +
                    '% para completar el 100% del peso de tus objetivos.':
                    c.progressBar.resta < 0
                        ? 'Recuerda que la suma del peso de los objetivos, no debe exceder el 100%. Has sobrepasado el peso por: '
                        + (-1)* c.progressBar.resta + '%' : 'Has acumulado el peso máximo de tus objetivos' }} </small>



            </div>

        </form>

        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btn btn-danger" style="margin: 5px"
                ng-click="c.closeObjetive()">Cancelar</button>

            <button type="submit" class="btn btn-primary" style="margin: 5px"
                ng-disabled="c.objetiveForm.status || c.saveObjetivoLoader"
                ng-click="c.saveObjetive(c.objetiveForm.fields.u_no_objective)">

                <i ng-if="c.saveObjetivoLoader" class="fa fa-circle-o-notch fa-spin"></i>

                <span ng-if="!c.saveObjetivoLoader">
                    Guardar
                </span>


            </button>
        </div>


    </div>
</div>]]></template>
    </sp_ng_template>
</record_update>
